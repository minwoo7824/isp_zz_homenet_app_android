<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setup.PushSettingActivity"
    android:background="@color/colorfafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorWhite"
        android:elevation="0.5dp">

        <LinearLayout
            android:id="@+id/Push_Setting_Lin_Back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:src="@drawable/ic_back"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/Activity_Name_Setting"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Push_title"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"></LinearLayout>

        <TextView
            android:id="@+id/Push_Setting_Txt_Save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:text="저장"/>

        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:text="@string/Push_emergency"/>

            <Switch
                android:id="@+id/Push_Setting_Swh_Emergency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector"
                android:checked="true"/>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorb8b8b8"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:text="@string/Push_delivery"/>

            <Switch
                android:id="@+id/Push_Setting_Swh_Delivery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector"
                android:checked="true"/>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorb8b8b8"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:text="@string/Push_parking"/>

            <Switch
                android:id="@+id/Push_Setting_Swh_Parking"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector"
                android:checked="true"/>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorb8b8b8"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:text="@string/Push_call"/>

            <Switch
                android:id="@+id/Push_Setting_Swh_Call"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:thumb="@drawable/switch_thumb_selector"
                android:track="@drawable/switch_track_selector"
                android:checked="true"/>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorb8b8b8"></LinearLayout>
    </LinearLayout>
</LinearLayout>