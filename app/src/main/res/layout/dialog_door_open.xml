<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="264dp"
        android:orientation="vertical"
        android:background="@drawable/shape_solid_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:gravity="center">
        </LinearLayout>

        <TextView
            android:id="@+id/TextView_Popup_Basic_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:gravity="center">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_solid_corner"
            android:backgroundTint="#fafafa"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/TextView_Popup_Basic_Contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"></LinearLayout>

            <EditText
                android:id="@+id/EditView_Popup_Basic_Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_stroke_white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:hint="@string/Homeview_code_cerify"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:weightSum="100">

            <Button
                android:id="@+id/Btn_Popup_Basic_Cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/shape_solid_corner"
                android:backgroundTint="@color/colorb8b8b8"
                android:text="@string/Popup_cancel"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>

            <Button
                android:id="@+id/Btn_Popup_Basic_Confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/shape_solid_corner"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/Popup_confirm"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>