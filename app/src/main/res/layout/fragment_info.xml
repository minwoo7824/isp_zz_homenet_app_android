<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/InfoFrag_Lin_Notice"
            android:onClick="OnClickLinControlFragment"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/img_bg_shadow"
            android:weightSum="100"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="26.6dp"
                    android:src="@drawable/ic_notice"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center_vertical"
                android:text="@string/Info_notice_title"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/InfoFrag_Lin_Visitor_Record"
            android:onClick="OnClickLinControlFragment"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/img_bg_shadow"
            android:weightSum="100"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="26.6dp"
                    android:layout_height="26.6dp"
                    android:src="@drawable/ic_visitor_record"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center_vertical"
                android:text="@string/Info_visit_video"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/InfoFrag_Lin_Visitor_Album"
            android:onClick="OnClickLinControlFragment"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/img_bg_shadow"
            android:weightSum="100"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="26.6dp"
                    android:layout_height="26.6dp"
                    android:src="@drawable/ic_visitor_album"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center_vertical"
                android:text="@string/Info_visit_gallery"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:background="@drawable/img_bg_coverflow"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kd.One.Main.CoverFlow
                android:id="@+id/Info_CoverFlow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.kd.One.Main.CoverFlow>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/InfoTextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:text="가스"
            android:textColor="@color/colorCoverTitle"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/InfoTextViewContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center|top"
            android:text="GAS VALVE CONTROLLER"
            android:textColor="@color/colorCoverContents"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/InfoImageViewDot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_dot"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/InfoImageViewDot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/img_dot"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/InfoImageViewDot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/img_dot"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>