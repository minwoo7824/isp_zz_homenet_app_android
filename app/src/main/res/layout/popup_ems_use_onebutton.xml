<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/shape_solid_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:gravity="center">
        </LinearLayout>

        <TextView
            android:id="@+id/TextView_Popup_Basic_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="@string/Ems_popup_use_title"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:gravity="center">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/shape_solid_corner"
            android:backgroundTint="#fafafa">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/Lin_Popup_Basic_List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/Btn_Popup_Basic_Cancel"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/shape_solid_corner"
                android:backgroundTint="@color/colorb8b8b8"
                android:text="@string/Popup_cancel"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>