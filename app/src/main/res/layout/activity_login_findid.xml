<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/Find_LinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:id="@+id/Find_Lin_Back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="OnClickBtnFind">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/Activity_Back" />
        </LinearLayout>



        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/selector_btn_list"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Find_EditText_Name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_stroke_corner_05px"
                android:hint="@string/Find_edittext_hint_name"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorb8b8b8" />

            <EditText
                android:id="@+id/Find_EditText_Phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_stroke_corner_05px"
                android:hint="@string/Find_edittext_hint_phone"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:textSize="14dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorb8b8b8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Find_Btn_Complete"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/shape_solid_corner"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="OnClickBtnFind"
                    android:text="@string/Find_btn_complete"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>