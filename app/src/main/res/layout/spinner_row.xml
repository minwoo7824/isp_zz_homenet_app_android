<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/img_text_box_spinner"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/Spinner_Row_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_icon_heat_select" />

        <ImageView
            android:id="@+id/Spinner_Row_Divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Spinner_Row_ImageView"
            android:src="@drawable/img_divider_spinner" />

        <TextView
            android:id="@+id/Spinner_Row_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/Spinner_Row_Divider"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhiteGray"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>

